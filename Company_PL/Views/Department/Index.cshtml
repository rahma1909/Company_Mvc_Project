@model IEnumerable<Department>




    <h1>ALL Department</h1>
    <br />
    <br />


    <a asp-action="Create" class="btn btn-primary" asp-controller="Department">Create Department</a>
    <br />
    <br />


    @if(Model.Count()>0){

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Code
                    </th>

                <th>
                    Name
                </th>

                <th>
                    Date Of Creation
                </th>

                <th>
                    Details

                </th>

                <th>
                    Update
                </th>


                <th>
                    Delete
                </th>

                </tr>
            </thead>

            <tbody>
                @foreach(var dep in Model){
                    <tr>
                   <td>@dep.Code</td>
                    <td>@dep.Name</td>
                    <td>@dep.CreateAt</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Details" asp-route-Id="@dep.Id" asp-controller="Department">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-Id="@dep.Id" asp-controller="Department">Update</a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@dep.Id"  asp-controller="Department">Delete</a>
                    </td>
                    </tr>
                }
            </tbody>



        </table>



    }else{
        <div class="mt-4 alert alert-info">
            <h4 >
                There is No Department :()
            </h4>
        </div>
    }
    

