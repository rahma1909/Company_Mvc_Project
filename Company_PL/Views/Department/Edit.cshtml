@* @model DepartmentEditDTO *@
@model Department 

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />

<form asp-action="Edit">
    <div class="my-3">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input class="form-control" asp-for=Code />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for=Name />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="CreateAt">CreateAt</label>
        <input class="form-control" asp-for=CreateAt />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>

    <div class="my-3">
        <input type="submit" value="Save" class="btn btn-warning" />
        <a class="btn btn-light" asp-action="Index">Back To List</a>
    </div>

</form>

@section validationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}