
@model IEnumerable<UserToReturnDto>




    <h1>ALL Users</h1>
    <br />
    <br />


@if (!string.IsNullOrEmpty(TempData["massege"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["massege"]</p>
    </div>
    }



<form>
    <div class="row ">
        <div class="col-md-8">
            <input id="SearchInput" placeholder="search by name....." name="SearchInput" class="form-control " />

        </div>
        <div class="col-md-4">
            <input type="submit" class=" btn btn-success" value="Search" />
        </div>
    </div>
</form>





    @if(Model.Count()>0){

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                <th>Id</th>
                 <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
               
                <th>Email</th>
                <th>Role</th>
                <th>Details</th>
                <th>Upadte</th>
                <th>Delete</th>
              
                </tr>
            </thead>

            <tbody>
                @foreach(var user in Model){
                    <tr>
                   
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @foreach (var role in @user.Roles)
                        {
                            <span>
                                @role
                            </span>
                        }



                    </td>

                    <partial name="_ButtonsPartialView" model="@user.Id"></partial>
                    </tr>
                }
            </tbody>



        </table>



    }else{
        <div class="mt-4 alert alert-warning">
            <h4 >
                There is No Users :(
            </h4>
        </div>
    }
    

