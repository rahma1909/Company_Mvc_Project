@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["Massege"]</p>
    </div>
    }
 

    <a asp-action="Create" class="btn btn-primary" asp-controller="Employee">Create Employee</a>
    <br />
    <br />


    @if(Model.Count()>0){

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(e=>e.HiringDate)</th>
                <th>@Html.DisplayNameFor(e => e.CreateAt)</th>
                <th>Details</th>
                <th>Upadte</th>
                <th>Delete</th>

                </tr>
            </thead>

            <tbody>
                @foreach(var emp in Model){
                    <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Email</td>
                    <td>@emp.Address</td>
                    <td>@emp.Phone</td>
                    <td>@emp.Salary</td>
                    <td>@emp.IsActive</td>
                    <td>@emp.IsDeleted</td>
                    <td>@emp.HiringDate</td>
                    <td>@emp.CreateAt</td>
                 
                   <partial name="_ButtonsPartialView"  model="@emp.Id"></partial>
                    </tr>
                }
            </tbody>



        </table>



    }else{
        <div class="mt-4 alert alert-warning">
            <h4 >
                There is No Employees :(
            </h4>
        </div>
    }
    

