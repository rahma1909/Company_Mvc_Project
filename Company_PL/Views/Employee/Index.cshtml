
@model IEnumerable<Employee>




    <h1>ALL Employee</h1>
    <br />
    <br />


    @* <div> *@
    @*     <p> class="alert alert-info" *@
    @*         @ViewData["Massege"] *@
    @*     </p> *@
    @* </div> *@


    @* <div> *@
    @*     <p> *@
    @*         @* @ViewBag.Massege *@ 
    @*     </p> *@
