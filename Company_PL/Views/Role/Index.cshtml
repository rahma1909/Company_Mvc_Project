
@model IEnumerable<RoleToReturnDto>




    <h1>ALL Roles</h1>
    <br />
    <br />


@if (!string.IsNullOrEmpty(TempData["massege"] as string))
{
    <div class="m-3 alert alert-info">
        <p>@TempData["massege"]</p>
    </div>
    }



<form>
    <div class="row ">
        <div class="col-md-8">
            <input id="SearchInput" placeholder="search by name....." name="SearchInput" class="form-control " />

        </div>
        <div class="col-md-4">
            <input type="submit" class=" btn btn-success" value="Search" />
        </div>
    </div>
</form>


<a asp-action="Create" class="btn mt-3 btn-primary" asp-controller="Role">Create Role</a>


    @if(Model.Count()>0){

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                <th>Id</th>
                 <th> Name</th>
             
                <th>Details</th>
                <th>Upadate</th>
                <th>Delete</th>
              
                </tr>
            </thead>

            <tbody>
                @foreach(var user in Model){
                    <tr>
                   
                    <td>@user.Id</td>
                    <td>@user.Name</td>
              

                    <partial name="_ButtonsPartialView" model="@user.Id"></partial>
                    </tr>
                }
            </tbody>



        </table>



    }else{
        <div class="mt-4 alert alert-warning">
            <h4 >
                There is No roles :(
            </h4>
        </div>
    }
    

